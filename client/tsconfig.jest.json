{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "NodeNext"
  },
  "include": [
    "src/**/*.ts",
    "__tests__/**/*.ts"
  ]
} 